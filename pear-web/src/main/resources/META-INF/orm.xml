<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings version="2.0"
                 xmlns="http://java.sun.com/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_2_0.xsd">
    <!-- 将注解优先使用在属性上 -->
    <persistence-unit-metadata>
        <persistence-unit-defaults>
            <access>FIELD</access>
        </persistence-unit-defaults>
    </persistence-unit-metadata>

    <!-- 为了提高系统性能,尽可能地为每个模块都声明一个或多个ID生成器,起始ID必须从10开始,前10个ID系统留用 -->
    <!-- 默认的系统序列生成器 -->
    <sequence-generator name="GEN_SEQ_APP"
                        allocation-size="10"
                        initial-value="110"
                        sequence-name="SEQ_APP">
    </sequence-generator>

    <!-- 默认的PEAR表序列生成器 -->
    <table-generator name="GEN_TAB_PEAR" table="T_GEN_PEAR"
                     allocation-size="200"
                     initial-value="10"
                     pk-column-name="GEN_ID"
                     pk-column-value="PEAR_ID"
                     value-column-name="GEN_VAL">
    </table-generator>

</entity-mappings>
